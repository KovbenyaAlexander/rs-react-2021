{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "plugin:import/react",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "react/jsx-filename-extension": [0],
      "import/extensions": "off"
    },
    "ignorePatterns": ["webpack.config.js", ".eslintrc.json","package-lock.json","package.json"],
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js",".jsx"]
        }
      }
  }
}
